import java.util.Scanner;
public class triangle {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter the length of Triangle's first side: ");
        float a= sc.nextFloat();
        System.out.print("Enter the length of Triangle's second side: ");
        float b= sc.nextFloat();
        System.out.print("Enter the length of Triangle's third side: ");
        float c= sc.nextFloat();
        System.out.println("!Checking the type of Triangle!");
        if (a==b && b==c && c==a) System.out.println("Triangle Type: Equilateral Triangle");
        else if (a==b ||b==c ||c==a) System.out.println("Triangle Type: Isosceles Triangle");
        else System.out.println("Triangle Type: Scalene Triangle");
    }
}
